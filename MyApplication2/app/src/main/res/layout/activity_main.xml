<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnRegisterTrail"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Registrar Trilha"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnManageTrail"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnManageTrail"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Gerenciar Trilha"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/btnRegisterTrail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnSettings" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Configurações"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/btnManageTrail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnAbout" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Sobre"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/btnSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
